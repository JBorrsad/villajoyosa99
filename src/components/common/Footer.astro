---
import { CONTACT_INFO, CLINIC_INFO } from '../../utils/constants';
import { asset } from '../../utils/assets';

const currentYear = new Date().getFullYear();
const clinica = CONTACT_INFO.clinica;
---

<footer class="footer">
	<div class="container">
		<div class="footer-grid">
			<div class="footer-col">
				<div class="footer-brand">
					<img 
						src={asset("/logo/white.png")}
						alt="Logo Clínica Dental Villajoyosa 99" 
						width="45"
						height="45"
						class="footer-logo"
						loading="lazy"
						decoding="async"
					/>
					<span class="footer-brand-text">Villajoyosa 99</span>
				</div>
				<p>{CLINIC_INFO.description}.</p>
			</div>
			
			<div class="footer-col">
				<h3>Contacto</h3>
				<address>
					<div class="footer-info-item">
						<svg class="footer-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
							<circle cx="12" cy="10" r="3"></circle>
						</svg>
						<p>{clinica.address}<br/>C.P. {clinica.postalCode} - {clinica.city}</p>
					</div>
					<div class="footer-info-item">
						<svg class="footer-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
						</svg>
						<p>
							<a href={`tel:+34${clinica.phone.replace(/\s/g, '')}`}>{clinica.phone}</a><br/>
							<a href={`tel:+34${clinica.mobile.replace(/\s/g, '')}`}>{clinica.mobile}</a>
						</p>
					</div>
					<div class="footer-info-item">
						<svg class="footer-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
							<polyline points="22,6 12,13 2,6"></polyline>
						</svg>
						<p><a href={`mailto:${clinica.email}`}>{clinica.email}</a></p>
					</div>
				</address>
			</div>
			
			<div class="footer-col">
				<h3>Información</h3>
				<ul>
					<li><a href="#servicios">Servicios</a></li>
					<li><a href="#equipo">Equipo</a></li>
					<li><a href="#clinica">Clínica</a></li>
					<li><a href="/avisos-legales">Avisos legales</a></li>
					<li><a href="/politica-privacidad">Política de privacidad</a></li>
					<li><a href="/politica-cookies">Política de cookies</a></li>
				</ul>
			</div>
		</div>
		
		<div class="footer-bottom">
			<p class="footer-copyright">&copy; {currentYear} {CLINIC_INFO.name}. Todos los derechos reservados.</p>
			<p class="footer-dev">Desarrollado por <a href="https://juan-borras.es/" target="_blank" rel="noopener noreferrer">Juan Borrás</a></p>
		</div>
	</div>
</footer>

<style>
	.footer {
		background: #1a1a1a;
		color: #ffffff;
		font-family: var(--ff-body);
		padding: var(--spacing-lg) 0 var(--spacing-md);
		margin-top: 0;
		position: relative;
		z-index: 10;
	}
	
	.footer-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: var(--spacing-md);
		margin-bottom: var(--spacing-md);
	}
	
	.footer-col h3 {
		color: #ffffff;
		font-size: 1.125rem;
		font-family: var(--ff-body);
		font-weight: 700;
		margin-bottom: 0.6rem;
	}
	
	.footer-col > p {
		margin-bottom: 0.5rem;
		line-height: 1.6;
		font-size: 0.9375rem;
		color: #b0b0b0;
	}
	
	.footer-col address {
		font-style: normal;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}
	
	.footer-info-item {
		display: flex;
		gap: 0.5rem;
		align-items: flex-start;
	}
	
	.footer-icon {
		color: #ffffff;
		flex-shrink: 0;
		margin-top: 0.25rem;
	}
	
	.footer-info-item p {
		margin: 0;
		font-size: 0.9375rem;
		line-height: 1.6;
		color: #b0b0b0;
	}
	
	.footer-col a {
		color: #b0b0b0;
		transition: color var(--transition);
		font-size: 0.9375rem;
		line-height: 1.6;
	}
	
	.footer-col a:hover {
		color: #ffffff;
	}
	
	.footer-col ul {
		list-style: none;
	}
	
	.footer-col ul li {
		margin-bottom: 0.5rem;
		font-size: 0.9375rem;
		line-height: 1.6;
		color: #b0b0b0;
	}
	
	.footer-brand {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin-bottom: 1rem;
	}
	
	.footer-logo {
		width: 45px;
		height: 45px;
		object-fit: contain;
	}
	
	.footer-brand-text {
		font-family: var(--ff-head);
		font-size: 1.5rem;
		font-weight: 700;
		color: #ffffff;
	}
	
	.footer-bottom {
		border-top: 1px solid rgba(255, 255, 255, 0.1);
		padding-top: var(--spacing-md);
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: 1rem;
	}
	
	.footer-copyright {
		font-size: 0.875rem;
		color: #b0b0b0;
		margin: 0;
	}
	
	.footer-dev {
		font-size: 0.875rem;
		color: #b0b0b0;
		margin: 0;
	}
	
	.footer-dev a {
		color: #ffffff;
		font-weight: 600;
		transition: color var(--transition-fast);
	}
	
	.footer-dev a:hover {
		color: #d0d0d0;
		text-decoration: underline;
	}
	
	@media (max-width: 767px) {
		.footer-grid {
			grid-template-columns: 1fr;
			gap: var(--spacing-md);
		}
	}
</style>

