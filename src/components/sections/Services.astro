---
import { SERVICES } from '../../utils/constants';
import { asset } from '../../utils/assets';

const backgroundImageUrl = asset('/fondoservices.png');
---

<section class="services section" id="servicios" style={`--bg-image: url('${backgroundImageUrl}')`}>
	<div class="container">
		<div class="section-header text-center">
			<h2>Estás en buenas manos</h2>
			<p class="section-subtitle">Tu bienestar es nuestra prioridad. Por ello, tu doctor dedicará todo el tiempo necesario para ofrecerte la atención que necesitas. Lee toda la información acerca de nuestros servicios.</p>
		</div>
		
		<div class="services-grid">
			{SERVICES.map(service => {
				const baseUrl = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
				let serviceUrl = null;
				if (service.id === 'implantes') {
					serviceUrl = `${baseUrl}implantologia`;
				} else if (service.id === 'odontologia-general') {
					serviceUrl = `${baseUrl}conservadora`;
				} else if (service.id === 'odontopediatria') {
					serviceUrl = `${baseUrl}odontopediatria`;
				}
				const CardTag = serviceUrl ? 'a' : 'article';
				
				return (
					<CardTag 
						class="service-card" 
						{...(serviceUrl ? { href: serviceUrl } : {})}
					>
						<div class="card-icon-wrapper">
							<div class="card-icon-bg">
								<img 
									src={asset(service.image)}
									alt={service.title}
									class="card-icon-image"
									loading="lazy"
								/>
							</div>
						</div>
						<div class="card-content">
							<h3>{service.title}</h3>
							<p class="card-description">{service.description}</p>
						</div>
					</CardTag>
				);
			})}
			
			<div class="services-cta" id="services-cta">
				<p class="services-note">¿No encuentras lo que buscas? Contáctanos y te ayudaremos.</p>
				<a href="#contacto" class="btn btn-primary">Pedir información</a>
			</div>
		</div>
	</div>
</section>

<script>
	function adjustCTAWidth() {
		const grid = document.querySelector('.services-grid') as HTMLElement;
		const cta = document.getElementById('services-cta');
		const cards = document.querySelectorAll('.service-card');
		
		if (!grid || !cta || cards.length === 0) return;
		
		const gridStyles = window.getComputedStyle(grid);
		const gridWidth = grid.offsetWidth;
		const gap = parseFloat(gridStyles.gap) || 0;
		
		const columnWidth = 300 + gap;
		const columnsPerRow = Math.floor((gridWidth + gap) / columnWidth);
		
		if (columnsPerRow <= 1) {
			cta.style.gridColumn = '';
			return;
		}
		
		const totalCards = cards.length;
		const cardsInLastRow = totalCards % columnsPerRow || columnsPerRow;
		const availableColumns = columnsPerRow - cardsInLastRow;
		
		if (availableColumns > 0) {
			cta.style.gridColumn = `span ${availableColumns}`;
		} else {
			cta.style.gridColumn = `span ${columnsPerRow}`;
		}
	}
	
	adjustCTAWidth();
	
	let resizeTimeout: ReturnType<typeof setTimeout>;
	window.addEventListener('resize', () => {
		clearTimeout(resizeTimeout);
		resizeTimeout = setTimeout(adjustCTAWidth, 100);
	});
</script>

<style>
	.services {
		background: var(--color-bg-light);
		position: relative;
		z-index: 10;
		padding: 4rem 0;
	}
	
	.services::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image: var(--bg-image);
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		background-attachment: fixed;
		opacity: 0.5;
		filter: grayscale(50%) brightness(0.75) saturate(1.2);
		pointer-events: none;
		z-index: 0;
	}
	
	.services::after {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(to bottom, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.1));
		pointer-events: none;
		z-index: 0;
	}
	
	.services .container {
		position: relative;
		z-index: 1;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}
	
	.section-header {
		margin-bottom: var(--spacing-lg);
	}
	
	.section-header h2 {
		font-size: 38px;
		margin-bottom: 1rem;
		color: #ffffff;
		font-family: var(--ff-head);
		font-weight: 700;
		line-height: 1.2;
		padding-bottom: 1rem;
		border-bottom: 3px solid #ffffff;
		display: inline-block;
		text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
	}
	
	.section-subtitle {
		font-size: var(--font-size-lg);
		color: #ffffff;
		max-width: 600px;
		margin: 0 auto;
		text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.5);
	}
	
	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
		gap: var(--spacing-md);
		margin-bottom: var(--spacing-lg);
		justify-content: center;
	}
	
	.service-card {
		background: white;
		border-radius: 12px;
		padding: 2rem;
		box-shadow: 0 2px 8px rgba(0,0,0,0.1);
		text-decoration: none;
		color: inherit;
		text-align: center;
		display: flex;
		flex-direction: column;
		align-items: center;
		transition: filter 0.3s ease, opacity 0.3s ease;
		cursor: pointer;
	}
	
	@media (min-width: 768px) {
		/* Efecto en las otras tarjetas cuando se hace hover */
		.services-grid:hover .service-card:not(:hover) {
			filter: grayscale(100%) blur(1.5px);
			opacity: 0.5;
		}
		
		/* Asegurar que la tarjeta con hover mantenga sus colores originales */
		.service-card:hover {
			filter: none;
			opacity: 1;
		}
		
		.service-card:hover .card-icon-image {
			filter: grayscale(0%);
		}
	}
	
	.card-icon-wrapper {
		margin-bottom: 1.5rem;
	}
	
	.card-icon-bg {
		width: 120px;
		height: 120px;
		border-radius: 50%;
		background: #f7fafc;
		display: flex;
		align-items: center;
		justify-content: center;
		margin: 0 auto;
		overflow: hidden;
	}
	
	.card-icon-image {
		width: 80px;
		height: 80px;
		object-fit: cover;
		border-radius: 50%;
		transition: filter 0.3s ease;
	}
	
	@media (min-width: 768px) {
		/* La imagen de la tarjeta con hover mantiene sus colores originales */
		.service-card:hover .card-icon-image {
			filter: grayscale(0%);
		}
	}
	
	.card-content {
		width: 100%;
	}
	
	.service-card h3 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		color: #2d3748;
		font-family: var(--ff-head);
		transition: color 0.3s ease;
	}
	
	.card-description {
		color: #4a5568;
		margin-bottom: 1.5rem;
		font-size: 0.95rem;
		line-height: 1.6;
		text-align: left;
		transition: color 0.3s ease;
	}
	
	@media (min-width: 768px) {
		/* Las tarjetas sin hover tienen texto gris */
		.services-grid:hover .service-card:not(:hover) h3,
		.services-grid:hover .service-card:not(:hover) .card-description {
			color: #9ca3af;
		}
	}
	
	.services-cta {
		min-width: 300px;
		width: 100%;
		padding: 2rem;
		background: var(--c-bg);
		border: 1px solid var(--c-border);
		border-radius: var(--rad-lg);
		box-shadow: var(--shadow-sm);
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		text-align: center;
	}
	
	.services-note {
		font-size: 18px;
		color: #4a5568;
		margin-bottom: 1.5rem;
		font-weight: 500;
	}
	
	.btn {
		padding: 1rem 2rem;
		border-radius: var(--border-radius);
		font-weight: 600;
		font-size: var(--font-size-base);
		transition: var(--transition);
		display: inline-block;
		text-align: center;
		text-decoration: none;
		border: none;
		cursor: pointer;
	}
	
	.btn-primary {
		background: #5c5c5c;
		color: #ffffff;
		border: 2px solid #5c5c5c;
	}
	
	.btn-primary:hover {
		background: #707070;
		color: #ffffff;
		border-color: #707070;
		transform: translateY(-1px);
		box-shadow: var(--shadow-md);
	}
	
	/* Pantallas móviles y tablets pequeñas */
	@media (max-width: 767px) {
		.services-grid {
			grid-template-columns: 1fr;
			justify-content: center;
		}
		
		.service-card {
			width: 100%;
			max-width: 300px;
			min-width: auto;
			margin: 0 auto;
		}
		
		.services-cta {
			width: 100%;
			max-width: 300px;
			min-width: auto;
			margin: 0 auto;
		}
	}
</style>
